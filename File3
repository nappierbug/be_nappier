import { Button } from "@/components/ui/button";
import { Terminal } from "lucide-react";
import { useState, useEffect } from "react";

export const Hero = () => {
  const [text, setText] = useState("");
  const fullText = "$ power-up-your-android";
  
  useEffect(() => {
    let index = 0;
    const timer = setInterval(() => {
      if (index <= fullText.length) {
        setText(fullText.slice(0, index));
        index++;
      } else {
        clearInterval(timer);
      }
    }, 100);
    
    return () => clearInterval(timer);
  }, []);

  return (
    <section className="relative overflow-hidden px-6 py-32 md:py-40">
      <div className="absolute inset-0 bg-gradient-to-b from-primary/5 via-transparent to-transparent pointer-events-none" />
      
      <div className="container mx-auto max-w-6xl relative z-10">
        <div className="flex flex-col items-center text-center space-y-8">
          <div className="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-card border border-primary/20 backdrop-blur-sm">
            <Terminal className="w-4 h-4 text-primary" />
            <span className="text-sm text-muted-foreground">Full Linux Environment on Android</span>
          </div>
          
          <h1 className="text-5xl md:text-7xl font-bold tracking-tight">
            <span className="text-foreground">Terminal </span>
            <span className="text-primary terminal-glow">APK</span>
          </h1>
          
          <div className="bg-card border border-primary/20 rounded-lg p-6 max-w-2xl w-full backdrop-blur-sm">
            <div className="flex items-center gap-2 mb-3 text-muted-foreground">
              <div className="w-3 h-3 rounded-full bg-destructive" />
              <div className="w-3 h-3 rounded-full bg-accent" />
              <div className="w-3 h-3 rounded-full bg-primary" />
            </div>
            <p className="font-mono text-left text-primary text-lg">
              {text}<span className="animate-pulse">▋</span>
            </p>
          </div>
          
          <p className="text-xl text-muted-foreground max-w-2xl">
            Transform your Android device into a powerful command-line workstation. 
            Run Linux commands, install packages, and automate tasks—all from your pocket.
          </p>
          
          <div className="flex flex-col sm:flex-row gap-4">
            <Button size="lg" className="bg-primary text-primary-foreground hover:bg-primary/90 shadow-[0_0_20px_rgba(0,255,159,0.3)] transition-all hover:shadow-[0_0_30px_rgba(0,255,159,0.5)]">
              Get Started
            </Button>
            <Button size="lg" variant="outline" className="border-primary/30 hover:bg-primary/10">
              Learn More
            </Button>
          </div>
        </div>
      </div>
    </section>
  );
};
